<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ScrollView
        android:id="@+id/dialog_filemanager_show_sv_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_filemanager_show_tv_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="this is log textview"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/dialog_filemanager_show_edit_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColorHint="#d5d5d5"
        android:textSize="15dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/dialog_filemanager_show_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"/>

</RelativeLayout>